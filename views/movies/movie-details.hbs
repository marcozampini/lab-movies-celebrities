{{#with movie}}
  <h2>{{title}}</h2>
  <p>{{genre}}</p>
  <p>{{plot}}</p>
  <p>Cast</p>
  <ul>
    {{#each cast}}
      <li><a href='/celebrities/{{id}}'>{{name}}</a>,
        {{occupation}}
        -
        <em>{{catchPhrase}}</em></li>
    {{/each}}
  </ul>
  <a href='/movies/{{id}}/edit'>Edit</a>
  |
  <form action='/movies/{{id}}/delete' method='post'>
    <input type='submit' value='Delete' />
  </form>
{{/with}}