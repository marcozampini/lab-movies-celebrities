<h2>List of all movies</h2>
<a href='/movies/create'>Add a new movie</a>
{{#each movies}}
  <h3>{{title}}</h3>
  <p>{{genre}}</p>
  <p>{{plot}}</p>
  <p>Cast</p>
  <ul>
    {{#each cast}}
      <li><a href='/celebrities/{{id}}'>{{name}}</a></li>
    {{/each}}
  </ul>
  <a href='/movies/{{id}}'>See details</a>
  |
  <a href='/movies/{{id}}/edit'>Edit</a>
{{/each}}